<launch>
    <let name="urdf_file" 
         value="$(find-pkg-share niryo_ned2_gripper_moveit_config)/config/niryo_ned2_gripper1_n_camera.urdf.xacro" />

    <let name="rviz_config"
         value="$(find-pkg-share niryo_robot_bringup)/config/rviz_sim.rviz" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher" output="screen">
        <param name="robot_description" value="$(command 'xacro $(var urdf_file)')" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <param from ="$(find-pkg-share niryo_ned2_gripper_moveit_config)/config/ros2_controllers.yaml" />
    </node>

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="arm_controller" />
    <node pkg="controller_manager" exec="spawner" args="gripper_controller" />

    <include file="$(find-pkg-share niryo_ned2_gripper_moveit_config)/launch/move_group.launch.py" />

    <node pkg="rviz2" exec="rviz2" output="screen"
       args="-d $(var rviz_config)" />

</launch>